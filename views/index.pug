doctype html
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
  title= title
nav.navbar.navbar-light.navbar-expand-md.bg-faded.justify-content-center
  a.navbar-brand.d-flex.w-50.mr-auto(href='/') Home
  button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsingNavbar3')
    span.navbar-toggler-icon
  #collapsingNavbar3.navbar-collapse.collapse.w-100
  if usuari
    ul.nav.navbar-nav.ml-auto.w-100.justify-content-end
      li.nav-item
        a.nav-link(href='/game')= "Play"
      li.nav-item
        a.nav-link(href='/logout')= "Benvingut "+usuari+", logout"
        
  else      
    ul.nav.navbar-nav.ml-auto.w-100.justify-content-end
      li.nav-item
        a.nav-link(href='/login') Login
      li.nav-item
        a.nav-link(href='/registre') Registre
.container
  h1.display-1.text-center= title
  table.table
    thead
      tr
        th(scope='col')= usuario
        th(scope='col') Player
        th(scope='col') Partidas Guanyades
        
    tbody
    each val, index in arrayUser
      tr
        th(scope='row')= index +1
        td= val.nom
        td= val.partidasguanyades
        
script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
